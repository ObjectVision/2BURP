container TerrainRoughnessIndex: Source = "conversion to tif-format in ArcGIS, unsigned integer 8 Bit, LZW-compression with correct extent"
{
	unit<ipoint> TRI1:StorageName = "%MondiaalDataDir%/Physical/TerrainRoughnessIndex/TRI1.tif",
	StorageType = "gdal.grid",
	StorageReadOnly = "True",
	DialogData = "LatLong"
	{
		attribute<uint8>   ReadData(gtopo);
		attribute<float32> ReadData_fl32(gtopo):=value(ReadData,float32);
	}

	unit<ipoint> TRI2:StorageName = "%MondiaalDataDir%/Physical/TerrainRoughnessIndex/TRI2.tif",
	StorageType = "gdal.grid",
	StorageReadOnly = "True",
	DialogData = "LatLong"
	{
		attribute<uint8>   ReadData(gtopo);
		attribute<float32> ReadData_fl32(gtopo):=value(ReadData,float32);
	}

	unit<ipoint> TRI3:StorageName = "%MondiaalDataDir%/Physical/TerrainRoughnessIndex/TRI3.tif",
	StorageType = "gdal.grid",
