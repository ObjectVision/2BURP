	}

	unit<ipoint> TRI7:StorageName = "%MondiaalDataDir%/Physical/TerrainRoughnessIndex/TRI7.tif",
	StorageType = "gdal.grid",
	StorageReadOnly = "True",
	DialogData = "LatLong"
	{
		attribute<uint8>   ReadData(gtopo);
		attribute<float32> ReadData_fl32(gtopo):=value(ReadData,float32);
	}
	
	attribute<float32> mean(gtopo):=	((TRI1/ReadData[float32]) / 100f) * 1f + 
											((TRI2/ReadData[float32]) / 100f) * 2f + 
											((TRI3/ReadData[float32]) / 100f) * 3f + 
											((TRI4/ReadData[float32]) / 100f) * 4f + 
											((TRI5/ReadData[float32]) / 100f) * 5f + 
											((TRI6/ReadData[float32]) / 100f) * 6f + 
											((TRI7/ReadData[float32]) / 100f) * 7f;
}