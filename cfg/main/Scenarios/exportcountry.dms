container Export
{
	attribute</Input/administrative/Countries/Country> Country_grid (Input/gtopo) :=Input/administrative/Countries/Country_grid, StorageName= "='%LocalDataProjDir%/results/'+GridName+'/country.tif'";
	attribute<km2>                                     areakm2      (Input/gtopo) :=Input/gtopo/area, StorageName= "='%LocalDataProjDir%/results/'+GridName+'/areakm2.tif'";

	unit<uint8> Country :=Input/administrative/Countries/Country 
	{
		attribute<uint8>   ID            := Input/administrative/Countries/Country/id;
		attribute<string>  ISO3          := Input/administrative/Countries/Country/ISO3;
		attribute<string>  Name_cor      := Input/administrative/Countries/Country/Name_cor;
		attribute<string>  Continent_cor := Input/administrative/Countries/Country/Continent_cor;
		attribute<km2>     areakm2       := Input/administrative/Countries/Country/area;
	}

	unit<uint32> variable_country_export := SubItem_PropValues(Country,'Name');
	container export_country_csv := Report/WriteTable8ToCSV(Country , AsList(variable_country_export/Name, ';'), '%LocalDataProjDir%/results/'+GridName+'/country.csv');
}